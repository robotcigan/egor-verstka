.hero
  align-items center
  background-color #f3f3f3
  display flex
  height 100vh
  margin-bottom $main-offset
  width 100%
  &__align
    width 100%
  &__container
    align-items center
    display flex
    justify-content space-between
  &__text
    // width (550 / $container-width * 100)%
    max-width 55rem
    width 50%
    ul
      list-style-type none
      padding 0
      li
        margin-bottom 1.2rem
    
.egor
  background url('../../img/egor.png') right bottom no-repeat
  background-size contain
  height calc(100vh - 5rem)
  margin-top 5rem
  width 50%
  img
    display block
  