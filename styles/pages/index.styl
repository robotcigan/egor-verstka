.section
  margin-bottom $main-offset

.services
  .service
    &__img
      display block
      margin-bottom 2.4rem
      img
        display block
        width 100%
    &__title
      font-weight 800
      margin-bottom 1.6rem
      position relative
    &__line
      background-color $primary
      height 3px
      margin-bottom 1.6rem
      max-width 4.8rem
      // width 4.8rem
      width 0
      // &:after
      //   background-color $primary
      //   bottom -2rem
      //   content ''
      //   height 2px
      //   left 0
      //   position absolute
      //   width 4.8rem
    &__price
      display block
      margin-bottom .8rem

.about
  &__img
    background url('../../img/about.jpg') no-repeat center
    background-size cover
    height 60rem
    // width 70rem
    left 0
    position absolute
    width (700 / 1900 * 100)%
  .h2
    text-align left

.insta
  &__img
    position relative
    img
      display block
  &__icon
    align-items center
    background-color rgba(#fff, .2)
    border-radius 50%
    bottom 1.6rem
    circle(4rem)
    display flex
    justify-content center
    opacity 0
    position absolute
    right 1.6rem
    .svg
      transform translateY(-1px)






