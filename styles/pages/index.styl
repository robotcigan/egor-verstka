.section
  margin-bottom $main-offset

.services
  .service
    &__img
      display block
      margin-bottom 2.4rem
      img
        display block
    &__title
      font-weight 800
      margin-bottom 3.6rem
      position relative
      &:after
        background-color $primary
        bottom -2rem
        content ''
        height 2px
        left 0
        position absolute
        width 4.8rem
    &__price
      display block
      margin-bottom .8rem

.about
  &__img
    background url('../../img/about.jpg') no-repeat center
    background-size cover
    height 60rem
    // width 70rem
    left 0
    position absolute
    width (700 / 1900 * 100)%

